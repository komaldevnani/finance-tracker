<h2> Friends </h2>

<div class="search-area">
  <%= form_tag "search_friend", remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-8 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Friend name", autofocus:true,
                           class:"form-control form-control-lg" %>
      </div>
      <div class="col-2 no-left-padding">
        <%= button_tag type: :submit, class:"btn btn-success" do %>
          <%= fa_icon 'search 2x'%>
        <%end %>
      </div>
    </div>
  <% end %>
</div>

<div id="friend-results">

</div>

<% if @friends %>
  <%= render 'friends/list' %>
<%end %>


<h1>My portfolio</h1>
<div class="search-area">
  <%= form_tag "search_stock", remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-6 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus:true,
                           class:"form-control form-control-lg" %>
      </div>
      <div class="col-2 no-left-padding">
        <%= button_tag type: :submit, class:"btn btn-success" do %>
          <%= fa_icon 'search 2x'%>
        <%end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<% if !@tracked_stocks.empty? %>
  <%= render 'users/list' %>
<%end %>
